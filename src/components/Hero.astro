---
import logo from "../assets/media/as-logo-white.png";
import { Image } from "astro:assets";
---

<div class="hero">
  <div class="max-width">
    <h1>Graphic Design <br />& Web Development</h1>
    <hr />
    <div class="logo-wrapper">
      <Image src={logo} alt="Adam Snape Creative Services Logo" loading="eager" width={100} densities={[1, 2]} />
      <h2 class="h1">Adam Snape</h2>
      <small>First Edition - 2025</small>
    </div>
    <div class="sticker"><p>Bespoke solutions for small independent businesses.</p></div>
  </div>
</div>

<style>
  .hero {
    background: linear-gradient(90deg, rgba(38, 38, 38, 0) 0.5%, rgba(10, 29, 125, 0.5) 1%, rgba(38, 38, 38, 0) 1.5%), linear-gradient(var(--clr-primary), var(--clr-primary));
    color: var(--clr-white);
    padding: 4rem 0;
    overflow: hidden;
    margin-bottom: 56px;
    box-shadow:
      0 4px 0 #0c1c65,
      0 5px 0 white,
      0 6px grey,
      0 7px 0 white,
      0 8px grey,
      0 9px 0 white,
      0 10px grey,
      0 11px 0 white,
      0 12px grey,
      0 13px 0 white,
      0 14px grey;

    & small {
      padding: 0.75em 1em;
      border: 1px solid;
      border-left-width: 1.5em;
      margin: 0.5em 0 0.5em auto;
      display: inline-block;
    }

    & hr {
      border: 2px solid var(--clr-white);
      margin: 3rem 0;
    }

    & img {
      height: var(--fs-h1);
      width: auto;
    }

    & .max-width {
      position: relative;
    }
  }

  .logo-wrapper {
    display: flex;
    gap: 2rem 1rem;
    align-items: center;
    flex-wrap: wrap;

    & .h1 {
      margin: 0;
    }
  }

  .sticker {
    display: none;
  }

  .sticker {
    aspect-ratio: 1 / 1;
    background-color: #00fcdc;
    color: #1d37b5;
    border-radius: 50%;
    text-align: center;
    display: grid;
    place-items: center;
    width: 20ch;
    padding: 3ch;
    margin: 0 auto;
    position: absolute;
    overflow: hidden;
    clip-path: polygon(0 0, 100% 0, 100% 92%, 0 92%);
    transform: rotate(-30deg);
    box-shadow: 0 0 2px rgb(0 0 0 / 0.3);
    position: absolute;
    font-size: var(--fs-xs);
    right: -5vw;
    top: 25%;
    transition:
      top 0.1s ease,
      right 0.1s ease;

    &::after {
      content: "";
      position: absolute;
      background: #f6f6f6;
      background: linear-gradient(0deg, rgba(38, 38, 38, 1) 0%, rgba(194, 194, 194, 1) 80%, rgba(255, 255, 255, 1) 100%);
      inset: 0;
      border-radius: 50%;
      transform: translate(0, 85%);
      box-shadow: 0 0 5px rgb(20 20 20 / 0.5);
    }

    & p {
      transform: rotate(15deg);
      font-size: var(--fs-s);
      margin: -0.7rem 0 0 0.3rem;
    }
  }
  @media screen and (width > 560px) {
    .sticker {
      font-size: var(--fs-s);
      right: 0;
      top: 5%;
    }
  }
</style>
