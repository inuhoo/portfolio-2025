---
import "../assets/styles/global.css";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/media/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | Adam Snape Creative Services` : `Adam Snape Creative Services`}</title>
    <meta name="description" content="Bespoke graphic design and web development services for small independent businesses that works." />
  </head>
  <body>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
